{
  "name": "@tiddlywiki/plugin-dev",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "bin": {
    "dev": "./dist/index.js"
  },
  "scripts": {
    "prepare": "modern build && husky install",
    "prepublishOnly": "modern build --platform",
    "dev": "modern dev",
    "build": "modern build",
    "reset": "rimraf ./**/node_modules",
    "lint": "modern lint",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "change-status": "modern change-status",
    "gen-release-note": "modern gen-release-note",
    "release": "modern release",
    "new": "modern new",
    "test": "modern test --passWithNoTests",
    "upgrade": "modern upgrade"
  },
  "engines": {
    "node": ">=14.17.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "cli-progress": "^3.11.2",
    "commander": "^9.4.1",
    "get-port-please": "^2.6.1",
    "lodash": "^4.17.21",
    "sha256": "^0.2.0",
    "uglify-js": "^3.15.4",
    "ws": "^8.6.0",
    "tiddlywiki": "^5.1.23",
    "html-minifier-terser": "^7.1.0",
    "esbuild-plugin-browserslist": "^0.4.9",
    "esbuild": "^0.14.38",
    "clean-css": "^5.3.0",
    "chokidar": "^3.5.3",
    "browserslist": "^4.20.3"
  },
  "peerDependencies": {
    "tiddlywiki": ">=5.1.0",
    "tw5-typed": "^0.2.7"
  },
  "devDependencies": {
    "@types/clean-css": "^4.2.6",
    "@types/cli-progress": "^3.11.0",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/node": "^18.11.9",
    "@types/sha256": "^0.2.0",
    "@types/uglify-js": "^3.17.1",
    "@types/ws": "^8.5.3",
    "@modern-js/module-tools": "1.21.6",
    "@modern-js/plugin-testing": "1.21.6",
    "@modern-js/tsconfig": "1.21.6",
    "rimraf": "^3.0.2",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.2",
    "husky": "^8",
    "tw5-typed": "^0.2.7",
    "typescript": "^4",
    "ts-node": "^10.9.1"
  },
  "sideEffects": [
    "*.css",
    "*.less",
    "*.sass",
    "*.scss"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
